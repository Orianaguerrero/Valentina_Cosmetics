<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>
  <body>
    <%- include('../partials/header.ejs') %>
    <main>
      <div class="register-main">
        <h2 class="cart-title">Registrarse</h2>
        <form class="login-form" method="post" action="/users/register" enctype="multipart/form-data">
          <input
            type="text"
            name="name"
            id="name"
            placeholder="Nombre"
            minlength="3"
            required
            class="login-input"
          />
          <input type="	text"
            name="lastName"
            id=" lastName"
            placeholder="Apellido"
            minlength="4"
            required
            class="login-input">
          <input
            type="email"
            name="email"
            id="email"
            placeholder="Direccion de correo electronico"
            class="login-input"
          />
          <input
            type="password"
            name="password"
            id="password"
            placeholder="ContraseÃ±a"
            minlength="6"
            required
            class="login-input"
          />

          <div>
            <p>Imagen de perfil</p>
            <label class="texto-register" for="foto-perfil"></label>

            <input
              class="perfil-register"
              type="file"
              name="filename"
              id="filename"
            />
          </div>
          <button class="login-button" type="submit">Registrarse</button>
        </form>
      </div>
    </main>
    <%- include('../partials/footer.ejs') %>
  </body>
</html>
