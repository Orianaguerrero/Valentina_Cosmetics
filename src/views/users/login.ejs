<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>
  <body>
    <%- include('../partials/header.ejs') %>
    <main>
      <div class="register-main">
        <h2 class="cart-title">Iniciar sesión</h2>
        <form class="login-form" action="/users/login" method="post">
          <% if (locals.errors && errors.email ) { %>
            <p class="text-danger"> <%= errors.email.msg %></p>
          <% } %>
          <input class="login-input" 
            type="text" 
            name="email" 
            id="email" 
            placeholder="Direccion de correo electronico"
          >
          <% if (locals.errors && errors.password ) { %>
            <p class="text-danger"> <%= errors.password.msg %></p>
          <% } %>
          <input class="login-input" 
            type="password" 
            name="password" 
            id="password" 
            placeholder="Contraseña"
          >

          <div class="rememberMe">
            <input type="checkbox" name="rememberMe" id="rememberMe">
            <label for="rememberMe">Recuerdame</label>
          </div>

          <button class="login-button" type="submit">INICIAR SESION</button>
          <a class="login-info" href="#" style="color:black">Has olvidado tu contraseña</a>
          <a class="login-info" href="/register" style="color: #cb7169">Registrarse</a>
          
        </form>
      </div>
    </main>
    <%- include('../partials/footer.ejs') %>
  </body>
</html>
